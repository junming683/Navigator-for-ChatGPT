{
  "manifest_version": 3,
  "name": "Navigator for ChatGPT (Local)",
  "version": "2.0.0",
  "description": "ChatGPT 对话目录导航工具（Firefox 本地导入版）",
  "browser_specific_settings": {
    "gecko": {
      "id": "navigator-for-chatgpt-local@chatanchor.dev",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
